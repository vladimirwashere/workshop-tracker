<% content_for(:title) { t("configs.edit_title") } %>

<div class="max-w-3xl mx-auto">
  <h1 class="page-title mb-6"><%= t("configs.edit_title") %></h1>

  <div class="glass-card p-6">
    <%= form_with(model: @config, class: "space-y-6") do |f| %>
      <%= render "shared/form_errors", record: @config %>

      <div>
        <%= f.label :key, t("configs.key"), class: "label-premium" %>
        <div class="mt-1">
          <code class="bg-slate-100/80 px-3 py-2 rounded-xl text-sm block"><%= @config.key %></code>
        </div>
      </div>

      <div>
        <%= f.label :value, t("configs.value"), class: "label-premium" %>
        <%= f.text_area :value, rows: 4,
          class: "mt-1 input-premium",
          "aria-label": t("configs.value") %>
      </div>

      <div class="flex items-center justify-end gap-3 pt-4 border-t border-slate-200/50">
        <%= link_to t("common.cancel"), configs_path, class: "btn-secondary" %>
        <%= f.submit t("common.save"), class: "btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
