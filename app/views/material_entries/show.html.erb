<% content_for(:title) { t("material_entries.show_title") } %>

<div class="max-w-3xl mx-auto">
  <div class="mb-6">
    <%= render "shared/back_link", fallback: project_material_entries_path(@project) %>
    <div class="flex items-center justify-between mt-2">
      <div>
        <h1 class="page-title"><%= @material_entry.description %></h1>
        <p class="mt-1 text-sm"><%= link_to @project.name, project_path(@project), class: "link-primary hover:underline" %></p>
      </div>
      <% if policy(@material_entry).update? %>
        <div class="flex items-center gap-2">
          <%= link_to t("common.edit"), edit_project_material_entry_path(@project, @material_entry),
            class: "btn-secondary",
            aria: { label: "#{t('common.edit')} #{@material_entry.description}" } %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="glass-card-flush">
    <dl class="divide-y divide-slate-100">
      <div class="px-6 py-4 grid grid-cols-3 gap-4">
        <dt class="text-sm font-medium text-slate-500"><%= t("material_entries.date") %></dt>
        <dd class="text-sm text-slate-900 col-span-2"><%= format_date(@material_entry.date) %></dd>
      </div>
      <div class="px-6 py-4 grid grid-cols-3 gap-4">
        <dt class="text-sm font-medium text-slate-500"><%= t("material_entries.description") %></dt>
        <dd class="text-sm text-slate-900 col-span-2"><%= @material_entry.description %></dd>
      </div>
      <% if @material_entry.task.present? %>
        <div class="px-6 py-4 grid grid-cols-3 gap-4">
          <dt class="text-sm font-medium text-slate-500"><%= t("daily_logs.task") %></dt>
          <dd class="text-sm col-span-2"><%= link_to @material_entry.task.name, project_task_path(@project, @material_entry.task), class: "link-primary hover:underline" %></dd>
        </div>
      <% end %>
      <div class="px-6 py-4 grid grid-cols-3 gap-4">
        <dt class="text-sm font-medium text-slate-500"><%= t("material_entries.supplier") %></dt>
        <dd class="text-sm text-slate-900 col-span-2"><%= @material_entry.supplier_name %></dd>
      </div>
      <div class="px-6 py-4 grid grid-cols-3 gap-4">
        <dt class="text-sm font-medium text-slate-500"><%= t("material_entries.quantity") %></dt>
        <dd class="text-sm text-slate-900 col-span-2"><%= format_number(@material_entry.quantity) %> <%= @material_entry.unit %></dd>
      </div>
      <div class="px-6 py-4 grid grid-cols-3 gap-4">
        <dt class="text-sm font-medium text-slate-500"><%= t("material_entries.unit_cost") %></dt>
        <dd class="text-sm text-slate-900 col-span-2"><%= format_currency(@material_entry.unit_cost_ex_vat_ron, date: @material_entry.date) %></dd>
      </div>
      <div class="px-6 py-4 grid grid-cols-3 gap-4">
        <dt class="text-sm font-medium text-slate-500"><%= t("material_entries.total_ex_vat") %></dt>
        <dd class="text-sm text-slate-900 col-span-2"><%= format_currency(@material_entry.total_cost_ex_vat_ron, date: @material_entry.date) %></dd>
      </div>
      <div class="px-6 py-4 grid grid-cols-3 gap-4">
        <dt class="text-sm font-medium text-slate-500"><%= t("material_entries.vat_rate") %></dt>
        <dd class="text-sm text-slate-900 col-span-2"><%= number_to_percentage(@material_entry.vat_rate * 100, precision: 0) %></dd>
      </div>
      <div class="px-6 py-4 grid grid-cols-3 gap-4">
        <dt class="text-sm font-medium text-slate-500"><%= t("material_entries.total_vat") %></dt>
        <dd class="text-sm text-slate-900 col-span-2"><%= format_currency(@material_entry.total_vat_ron, date: @material_entry.date) %></dd>
      </div>
      <div class="px-6 py-4 grid grid-cols-3 gap-4 bg-slate-50/50">
        <dt class="text-sm font-semibold text-slate-700"><%= t("material_entries.total_inc_vat") %></dt>
        <dd class="text-sm font-semibold text-slate-900 col-span-2"><%= format_currency(@material_entry.total_cost_inc_vat_ron, date: @material_entry.date) %></dd>
      </div>
    </dl>
  </div>

  <%= render "attachments/attachments_section", related: @material_entry %>
</div>
