# Database — PostgreSQL connection (required)
DATABASE_HOST=db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
# DATABASE_PORT=5432  # Override if local PostgreSQL occupies port 5432 (e.g., 5433)

# Rails — secret key for sessions/cookies (required in production; generate with `bin/rails secret`)
SECRET_KEY_BASE=generate_with_rails_secret
RAILS_ENV=development

# Email — SendGrid API key for transactional emails (optional; dev mode opens emails in browser)
SENDGRID_API_KEY=
MAILER_FROM=noreply@example.com
MAILER_DOMAIN=example.com

# FX rates — API key from exchangerate-api.com (optional; FX features work without it but won't fetch rates)
EXCHANGERATE_API_KEY=

# App host — used for email links and absolute URLs (required)
APP_HOST=localhost:3000

# Admin seed account — credentials for the initial admin user created by db:seed (required on first setup)
ADMIN_EMAIL=admin@example.com
ADMIN_DISPLAY_NAME=Admin
ADMIN_PASSWORD=Changeme1

# Active Record Encryption — GDPR encryption at rest (generate with `bin/rails db:encryption:init`)
AR_ENCRYPTION_PRIMARY_KEY=
AR_ENCRYPTION_DETERMINISTIC_KEY=
AR_ENCRYPTION_KEY_DERIVATION_SALT=

# Error tracking — Honeybadger (optional; errors reported in production only)
HONEYBADGER_API_KEY=
